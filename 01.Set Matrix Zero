class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {
        int col0 = 1;   //true   : set for first column if it get any zero  
        int row = matrix.size();
        int col = matrix[0].size();

        for(int i=0;i<row;i++)
        {
            if(matrix[i][0] == 0)      
â€¦                }
            }
            if(col0 == 0)    //if col0 is false mark that element as zero
            {
                matrix[i][0] = 0;
            }
        }
    }
};
